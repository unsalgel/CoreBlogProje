@using EntityLayer.Concrete
@model List<Announcements>
@{
    ViewData["Title"] = "Announcements";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/admintema/font-awesome/css/font-awesome.css" rel="stylesheet">
 
<div class="row">
    <div class="col-lg-12">
        <h3>Duyurular</h3>
        <div class="wrapper wrapper-content animated fadeInUp">
            <ul class="notes">
                @foreach (var item in Model)
                {
                <li>
                    <div>
                        <small>@Convert.ToDateTime(item.Date).ToString("dd-MMMM-yyyy")</small>
                        <h4>@item.AnnouncementsTitle</h4>
                        <p>@item.AnnouncementsContent</p>
                            <a href="/Admin/Announcements/DeleteAnnouncements/@item.ID"><i class="fa fa-trash-o "></i></a>
                    </div>
                </li>
                }
            </ul>
        </div>
    </div>
</div>
<a data-toggle="modal" class="btn btn-outline-success" href="#modal-form">Duyuru Ekle</a>
<div id="modal-form" class="modal fade" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 b-r">
                        <h3 class="m-t-none m-b">Kategori Ekle</h3>

                        <p>Duyuru eklemek için gerekli alanları doldurun.</p>

                        <form role="form" method="post" action="/Admin/Announcements/AddAnnouncements">
                            <input hidden name="Date"value="@DateTime.Now.Date" />
                            <div class="form-group"><label>Duyuru Adı</label> <input type="text" name="AnnouncementsTitle" placeholder="Duyuru Başlığı giriniz..." class="form-control"></div>
                            <div class="form-group"><label>Duyuru Açıklaması</label> <textarea name="AnnouncementsContent" type="text" placeholder="Duyuru açıklaması giriniz..." class="form-control"></textarea></div>
                            <br />
                            <div>
                                <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Duyuru Ekle</strong></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


