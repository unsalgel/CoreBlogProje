<div class="row">
    <div class="col-lg-4">
        <div class="widget-head-color-box navy-bg p-lg text-center">
            <div class="m-b-md">
                <h2 class="font-bold no-margins">
                    @ViewBag.bestwritername
                </h2>
                <small>Yazar</small>
            </div>
            <img src="@ViewBag.bestwriterimg" width="150"  height="150" class="rounded-circle circle-border m-b-md" alt="profile">
            <div>
                <span>@ViewBag.bestwriterblogcount Blog sayısı</span> |
                <span>@ViewBag.bestwriteremail     Email adresi</span>
            </div>
        </div>
 
    </div>
    <div class="col-lg-2">
        <div class="widget navy-bg p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-thumbs-up fa-4x"></i>
                <h1 class="m-xs">@ViewBag.subscribemailcount</h1>
                <h3 class="font-bold no-margins">
                    Mail
                </h3>
                <small>Aboneleri</small>
            </div>
        </div>
        <div class="widget  p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-flash fa-4x"></i>
                <h1 class="m-xs">612</h1>
                <h3 class="font-bold no-margins">
                    Thunder
                </h3>
                <small>amount</small>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="widget lazur-bg p-xl">

            <h2>
                UNSOFT
            </h2>
            <ul class="list-unstyled m-t-md">
                <li>
                    <span class="fa fa-envelope m-r-xs"></span>
                    <label>Email:</label>
                    info@unsalgel.com
                </li>
                <li>
                    <span class="fa fa-home m-r-xs"></span>
                    <label>Address:</label>
                     İzmir, Turkey
                </li>
                <li>
                    <span class="fa fa-phone m-r-xs"></span>
                    <label>Contact:</label>
                    (+90)555555555
                </li>
            </ul>

        </div>
        <div class="widget red-bg p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-bell fa-4x"></i>
                <h1 class="m-xs">10</h1>
                <h3 class="font-bold no-margins">
                   Bildirimler
                </h3>
                <small></small>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget yellow-bg p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-thumbs-up fa-4x"></i>
                <h1 class="m-xs">50</h1>
                <h3 class="font-bold no-margins">
                    Beğeni
                </h3>
                <small></small>
            </div>
        </div>
        <div class="widget yellow-bg p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-warning fa-4x"></i>
                <h1 class="m-xs">Alarm</h1>
                <h3 class="font-bold no-margins">
                    Do
                </h3>
                <small>something</small>
            </div>
        </div>
    </div>
</div>