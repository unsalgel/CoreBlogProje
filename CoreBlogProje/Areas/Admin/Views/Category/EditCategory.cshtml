@using EntityLayer.Concrete
@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">Kategori Güncelle</div>
            <div class="ibox-content">
              @using(Html.BeginForm("EditCategory","Category",FormMethod.Post)){
                @Html.HiddenFor(p=>p.CategoryID)
                    @Html.HiddenFor(p=>p.CategoryStatus)
                  <label>Kategori Adı</label>
                  @Html.TextBoxFor(p=>p.CategoryName,new{@class="form-control"})
                    <label>Kategori Açıklaması</label>
                    @Html.TextAreaFor(p=>p.CategoryDescription,5,5,new{@class="form-control"})
                    <br />
                    <button class="btn btn-primary">Kategori Güncelle</button>
              }
            </div>
        </div>
    </div>
</div>
