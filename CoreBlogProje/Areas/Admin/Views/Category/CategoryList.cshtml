@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string status = "";
    string statusname = "";
}



<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5> Kategori Listesi</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Kategori Açıklaması</th>
                        <th>Kategori Durumu</th>
                        <th>Kategori Güncelle</th>
                        <th>Kategori Gizle</th>
                        <th>Kategori Aktif</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if(item.CategoryStatus==true){
                            status = "Kategori Aktif";
                            statusname = "label label-primary";
                        }
                        else{
                            status = "Kategori Pasif";
                            statusname = "label label-danger";
                        }


                        <tr>
                            <th>@item.CategoryID</th>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td><span class="@statusname">@status</span></td>
                            <td><a href="/Admin/Category/EditCategory/@item.CategoryID" class="btn btn-outline-primary">Kategori Güncelle</a></td>
                            <td><a href="/Admin/Category/CategoryStatuFalse/@item.CategoryID" class="btn btn-outline-success">Kategoriyi Gizle</a></td>
                            <td><a href="/Admin/Category/CategoryStatuTrue/@item.CategoryID" class="btn btn-outline-secondary">Kategoriyi Aktifleştir </a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a data-toggle="modal" class="btn btn-success" href="#modal-form">Kategori  Ekle</a>
            <div id="modal-form" class="modal fade" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12 b-r">
                                    <h3 class="m-t-none m-b">Kategori Ekle</h3>

                                    <p>Kategori eklemek için gerekli alanları doldurun.</p>

                                    <form role="form" method="post" action="/Admin/Category/AddCategory">
                                        <div class="form-group"><label>Kategori Adı</label> <input type="text" name="CategoryName" placeholder="Kategori adı giriniz..." class="form-control"></div>
                                        <div class="form-group"><label>Kategori Açıklaması</label> <textarea name="CategoryDescription" type="text" placeholder="Kategori açıklaması giriniz..." class="form-control"></textarea></div>
                                        <div>
                                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Kategori Ekle</strong></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

 