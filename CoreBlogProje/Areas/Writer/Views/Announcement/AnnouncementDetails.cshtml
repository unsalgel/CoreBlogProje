@using EntityLayer.Concrete
@model EntityLayer.Concrete.Announcements
@{
    ViewData["Title"] = "AnnouncementDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Duyuru Detay</h4>
                <label>Duyuru Başlık</label>
                <input type="text" class="form-control" readonly value="@Model.AnnouncementsTitle" name="Receiver" />
                <label>Duyuru Detay</label>
                <textarea type="text" class="form-control" readonly name="MessageContent">@Model.AnnouncementsContent</textarea>
                 <label>Duyuru Tarihi</label>
                <input type="text" class="form-control" readonly name="Date" value="@Convert.ToDateTime(Model.Date).ToString("dd-MMMM-yyyy")" />
                <br />
                <a href="/Writer/ControlPanel/Dashboard/" class="btn btn-outline-warning">Geri Dön</a>
            </div>
        </div>
    </div>
</div>
