@using EntityLayer.Concrete
@model List<Announcements>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        <span class="count-symbol bg-danger"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Haftalık Duyurular</h6>
        <div class="dropdown-divider"></div>
        @foreach (var item in Model)
        {
            <a href="/Writer/Announcement/AnnouncementDetails/@item.ID" class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="preview-icon bg-danger">
                    <i class="mdi mdi-bell"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@item.AnnouncementsTitle</h6>
                <p class="text-gray ellipsis mb-0"> @item.AnnouncementsContent </p>
            </div>
        </a>
        }
    </div>
</li>