@model EntityLayer.Concrete.WritersMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Mesaj Detay</h4>
                <label>Alıcı isim</label>
                <input type="text" class="form-control" readonly value="@Model.ReceiverName" name="Receiver" />
                <label>Alıcı Mail</label>
                <input type="text" class="form-control" readonly value="@Model.Receiver" name="Receiver" />
                <label>Başlık</label>
                <input type="text" class="form-control" readonly value="@Model.Subject" name="Subject" />
                <label>Mesaj</label>
                <textarea type="text" class="form-control" readonly name="MessageContent">@Model.MessageContent</textarea>
                 <label>Gönderilme Tarihi</label>
                <input type="text" class="form-control" readonly name="Date" value="@Convert.ToDateTime(Model.Date).ToString("dd-MMMM-yyyy")" />
                <br />
                <a href="/Writer/Message/SendMessage/" class="btn btn-outline-warning">Geri Dön</a>
            </div>
        </div>
    </div>
</div>
