@using EntityLayer.Concrete
@using Microsoft.AspNetCore.Identity
@inject UserManager<WriterUser> usertest
@inject SignInManager<WriterUser> login
<div class="top-bar_sub_w3layouts container-fluid">
	<div class="row">
		<div class="col-md-4 logo text-left">
			<a class="navbar-brand" href="/Blog/Index/">
				<i class="fab fa-linode"></i> Weblog
			</a>
		</div>
	
		<div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0">
			@if (login.IsSignedIn(User))
			{
				var girisyapan = await usertest.GetUserAsync(User);
				<span>Hoşgeldiniz...!  <b>@girisyapan.Name</b></span>
				<span class="mx-lg-4 mx-md-2  mx-1">
					<a href="/Writer/Default/Index/">
						<i class="fas fa-bars"></i> Yazar Paneline  git
					</a> 
					<a href="/Login/LogOut/">
						 <i class="fas fa-sign-out-alt"></i> Çıkış Yap
					</a>
				</span>
				 
				}
				else{
			<span class="mx-lg-4 mx-md-2  mx-1">
				<a href="/Login/Index/">
					<i class="fas fa-lock"></i> Giriş Yap
				</a>
			</span>
			<span>
				<a href="/Register/Index/">
					<i class="far fa-user"></i> Kayıt Ol
				</a>
			</span>
			}
				
		</div>
		<div class="col-md-4 log-icons text-right">

			<ul class="social_list1 mt-3">

				<li>
					<a href="#" class="facebook1 mx-2">
						<i class="fab fa-facebook-f"></i>

					</a>
				</li>
				<li>
					<a href="#" class="twitter2">
						<i class="fab fa-twitter"></i>

					</a>
				</li>
				<li>
					<a href="#" class="dribble3 mx-2">
						<i class="fab fa-dribbble"></i>
					</a>
				</li>
				<li>
					<a href="#" class="pin">
						<i class="fab fa-pinterest-p"></i>
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
