@model CoreBlogProje.Models.UserLoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

	<section class="main-content-w3layouts-agileits">
		<div class="container">
				<h3 class="tittle">Giriş Yap</h3>
				<div class="row inner-sec">
					<div class="login p-5 bg-light mx-auto mw-100">
					<form action="#" method="post">
							<div class="form-group">
							  <label for="exampleInputEmail1 mb-2">Kullanıcı Adı</label>
							  <input type="text" class="form-control" id="exampleInputEmail1" name="UserName" aria-describedby="emailHelp" placeholder="" required="">
 							</div>
							<div class="form-group">
							  <label for="exampleInputPassword1 mb-2">Password</label>
							  <input type="password" class="form-control" name="Password" id="exampleInputPassword1" placeholder="" required="">
							</div>
							<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
					<div class="text-danger" asp-validation-summary=ModelOnly>
					</div>
					</form>
					<p><a href="/Register/Index/">Hesabınız yok mu ?</a></p>
						
		</div>
		</div>
	</div>
	</section>
